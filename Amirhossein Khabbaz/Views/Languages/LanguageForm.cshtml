@model Amirhossein_Khabbaz.ViewModels.LanguageFormViewModel
<h2 class="haveMarginTop">@ViewBag.title </h2>
@using (Html.BeginForm("Save", "Languages"))
{
    @Html.ValidationSummary(true, "Please fix the following problems.")
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.CurrentValue)
        @Html.TextBoxFor(p => p.CurrentValue, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.CurrentValue)
    </div>
    @Html.HiddenFor(p => p.MaximumValue)
    @Html.HiddenFor(p => p.PersonId)
    @Html.HiddenFor(p => p.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn-primary btn">Save</button>

}

